<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoveIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:navigationBarColor">@color/darkest_green</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="colorSurface">@color/darkest_gray</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor" tools:ignore="DuplicateDefinition">@color/darkest_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="pagesColor">@color/dark_gray</item>
        <item name="abbreviationsBarColor">@color/dark_gray</item>
        <item name="abbreviationsLabelsColor">@color/white</item>
        <item name="daysLabelsColor">@color/white</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/dark_green</item>
    </style>

    <style name="Theme.MoveIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MoveIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.MoveIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>